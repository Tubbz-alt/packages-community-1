 # Maintainer: Fabio 'Lolix' Loli <lolix@disroot.org> -> https://github.com/FabioLolix

pkgname=corebox
pkgver=2.1.1.r2.g72434f9
pkgrel=1
pkgdesc="Combination of some common desktop apps with Bookmark"
arch=('x86_64' 'i686' 'arm' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/rahmanshaber/corebox"
license=('GPL2')
depends=('file' 'qt5-base' 'qt5-multimedia' 'qt5-charts' 'qt5-x11extras' 'qt5-webengine' 'engrampa')
makedepends=('git' )
provides=('corebox')
conflicts=('corebox')
source=("${pkgname}::git+https://github.com/rahmanshaber/corebox.git")
md5sums=('SKIP')

pkgver() {
  cd ${pkgname}
  git describe --long --tags | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
  mkdir -p build
}

build() {
  cd build
  qmake-qt5 ../$pkgname PREFIX=/usr
  make
}

package() {
  cd build
  make INSTALL_ROOT="$pkgdir" install
}
